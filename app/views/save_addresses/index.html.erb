<p id="notice"><%= notice %></p>

<h1>Save Addresses</h1>

<table>
  <thead>
    <tr>
      <th>Address</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th>Default</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @save_addresses.each do |save_address| %>
      <tr>
        <td><%= save_address.address %></td>
        <td><%= save_address.latitude %></td>
        <td><%= save_address.longitude %></td>
        <td><%= save_address.default %></td>
        <td><%= save_address.user_id %></td>
        <td><%= link_to 'Show', save_address %></td>
        <td><%= link_to 'Edit', edit_save_address_path(save_address) %></td>
        <td><%= link_to 'Destroy', save_address, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Save Address', new_save_address_path %>
