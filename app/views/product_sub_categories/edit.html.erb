<div id="layoutSidenav">
  <div id="layoutSidenav_content">
    <% if notice.present? %>
      <p id="notice" class="alert-success notice-style"><%= notice %></p>
    <% end %>
    <div class="page-wrapper p-b-50">
      <div class="wrapper wrapper--w790">
        <div class="card card-5 form-border-style">
          <div class="card-heading text-white bg-clr">
            <h4 class="text-center font-weight-light">Edit Product Category </h4>
          </div>

          <div class="card-body">
            <%= form_with(model: @product_category, local: true) do |form| %>
              <% if @product_category.errors.any? %>
                <%= render 'layouts/error_messages', object: form.object %>
              <% end %>

              <div class="form-row">
                <%= form.label :product, :class => "mb-1 pt-1 name", :style => 'font-weight:bold' %>
                <div class="value">
                  <div class="input-group">
                    <input class="form-control py-2" readonly value="<%= @product_category.product.name %>"/>
                  </div>
                </div>
              </div>



              <div class="form-row">
                <%= form.label :category, :class => "mb-1 pt-1 name", :style => 'font-weight:bold' %>
                <div class="value">
                  <div class="input-group">
                    <%= form.select :category_id, options_for_select(ProductCategory.all.map { |c| [c.name, c.id] }), {}, {class: "form-control selectpicker", data: {"live-search": true}, multiple: true} %>
                  </div>
                </div>
              </div>

              <hr>
              <div class="row">
                <div class="col-md-3"></div>
                <div class="col-md-3">
                  <div class="form-group mt-3 mb-0">
                    <div class="actions">
                      <%= form.submit 'Save', :class => 'btn w-100 bg-clr btn-style' %>
                    </div>
                  </div>
                </div>
                <div class="col-md-3">
                  <div class="form-group mt-3 mb-0">
                    <div class="actions">
                      <%= link_to "Cancel", categories_path, :class => 'btn w-100 bg-clr btn-style' %>
                    </div>
                  </div>
                </div>
                <div class="col-md-3"></div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        $('select').selectpicker();
    });
</script>