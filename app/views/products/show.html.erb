<div id="layoutSidenav">
  <div id="layoutSidenav_content">
    <% if notice.present? %>
      <p id="notice" class="alert-success notice-style"><%= notice %></p>
    <% end %>
    <div class="page-wrapper p-b-50">
      <div class="wrapper wrapper--w790">
        <div class="card card-5 form-border-style">
          <div class="card-heading bg-clr">
            <h4 class="text-center font-weight-light text-white">
              <%= @product.name %>
            </h4>
          </div>
          <div class="card-body">


            <div class="form-row">
              <div class="col-md-4">
                <strong>Name:</strong>
              </div>
              <div class="col-md-6">
                <div>
                  <%= @product.name %>
                </div>
              </div>
            </div>

            <div class="form-row">
              <div class="col-md-4">
                <strong>Medicine Tag:</strong>
              </div>
              <div class="col-md-6">
                <div>
                  <%= @product.medicine_tag %>
                </div>
              </div>
            </div>

            <div class="form-row">
              <div class="col-md-4">
                <strong>Cost:</strong>
              </div>
              <div class="col-md-6">
                <div>
                  <%= @product.cost %>
                </div>
              </div>
            </div>


            <div class="form-row">
              <div class="col-md-4">
                <strong>Description:</strong>
              </div>
              <div class="col-md-6">
                <div>
                  <%= @product.description %>
                </div>
              </div>
            </div>
            <div class="form-row">
              <div class="col-md-4">
                <strong>Quantity:</strong>
              </div>
              <div class="col-md-6">
                <div>
                  <%= @product.quantity %>
                </div>
              </div>
            </div>
            <div class="form-row mb-0 pb-0">
              <div class="col-md-4">
                <strong>Categories:</strong>
              </div>
              <div class="col-md-6">
                <div>
                  <%=  @product.categories.first.name rescue "N/A" %>
                </div>
              </div>
            </div>

            </div>
            <hr>

            <div class="row">
              <div class="col-md-3"></div>
              <div class="col-md-3">
                <div class="form-group mt-3 mb-0">
                  <div class="actions">
                    <%= link_to "Edit", edit_product_path(@product), :class => "btn bg-clr btn-style w-100"  %>
                  </div>
                </div>
              </div>
              <div class="col-md-3">
                <div class="form-group mt-3 mb-0">
                  <div class="actions">
                    <%= link_to 'Back', products_path, :class => 'btn bg-clr btn-style w-100' %>
                  </div>
                </div>
              </div>
              <div class="col-md-3"></div>
            </div>

          </div>
        </div>
      </div>
    </div>
  </div>
</div>