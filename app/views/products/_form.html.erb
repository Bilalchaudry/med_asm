        <%= form.text_field :cost, :class => "form-control py-2", :required => true %>
      </div>
    </div>
  </div>

  <div class="form-row">
      <%= form.label :description, :class => "mb-1 pt-1 name", :style => 'font-weight:bold' %>
    <div class="value">
      <div class="input-group">
        <%= form.text_field :description, :class => "form-control py-2" %>
      </div>
    </div>
  </div>


