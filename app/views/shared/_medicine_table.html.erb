<div class="card mb-4">
  <div class="card-header"><i class="fas fa-table mr-1"></i>Products</div>
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-bordered" id="dataTableProject" width="100%" cellspacing="0">
        <thead>
        <tr>
          <th>Name</th>
          <th>Cost</th>
          <th>Description</th>
          <th>Quantity</th>
          <th>Categories</th>
          <th>Actions</th>
        </tr>
        </thead>

        <tbody>
        <% Product.all.each do |product| %>
          <tr>
            <td><%= product.name %></td>
            <td><%= product.cost rescue nil %></td>
            <td><%= product.description rescue "N/A" %></td>
            <td><%= product.quantity %></td>
            <td>
              <% categories = product.product_categories %>
              <% categories.each do |category| %>
                <%= category.name %>
              <% end %>
            </td>
            <td>
              <%= link_to "View", product_path(product), :class => "btn btn-outline-dark" %>
              <%= link_to "Edit", edit_product_path(product), :class => "btn btn-outline-info" %>
              <%= link_to 'Destroy', product, method: :delete, data: {confirm: 'Are you sure?'}, :class => "btn btn-outline-danger" %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<script>
    $(document).ready(function () {
        var dataTable = $('#dataTableProject').DataTable({});
        document.addEventListener("turbolinks:before-cache", function () {
            if (dataTable !== null) {
                dataTable.destroy();
                dataTable = null;
            }
        });
    });
</script>