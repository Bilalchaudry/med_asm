<div class="card mb-4">
  <div class="card-header"><i class="fas fa-table mr-1"></i>Customers</div>
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-bordered" id="userdataTable" width="100%" cellspacing="0">
        <thead>
        <tr>
          <th>Full Name</th>
          <th>Email</th>
          <th>Gender</th>
          <th>Phone</th>
          <th>Actions</th>
        </tr>
        </thead>

        <tbody>
        <% User.all.each do |user| %>
          <tr>
            <td><%= user.full_name %></td>
            <td><%= user.email %></td>
            <td><%= user.gender %></td>
            <td><%= user.phone rescue nil %></td>
            <td>
              <%= link_to "View", user_path(user), :class => "btn btn-outline-dark" %>
              <%= link_to "Edit", edit_user_path(user), :class => "btn btn-outline-info" %>
              <%= link_to "Delete", user, data: {confirm: 'Are you sure?'}, :class => "btn btn-outline-danger", method: :delete%>
            </td>
          </tr>
        <% end %>

        </tbody>
      </table>
    </div>
  </div>
</div>
<script>
$(document).ready(function() {
  var dataTable = $('#userdataTable').DataTable({
  });
  document.addEventListener("turbolinks:before-cache", function() {
    if (dataTable !== null) {
      dataTable.destroy();
      dataTable = null;
    }
  });
});
</script>