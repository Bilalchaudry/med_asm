<div id="layoutSidenav">
  <div id="layoutSidenav_content">
    <main>
      <% flash.each do |name, msg| %>
        <%= content_tag(:div, msg, class: "alert alert-success") if msg.length > 0 %>
      <% end %>
      <div class="container-fluid">
        <h1 class="mt-4">Dashboard</h1>
        <div class="row">
          <div class="col-sm-12">
            <section id="tabs">
              <div class="">
                <div class="row">
                  <div class="col-sm-12 ">
                    <nav>
                      <div class="nav nav-tabs nav-fill" id="nav-tab" role="tablist">

                        <a class="nav-item nav-link dashboard-b1" id="nav-users-tab" data-toggle="tab" href="#users-table" role="tab" aria-controls="nav-profile" aria-selected="false">
                          <div class="card-body ">Customers</div>
                          <div class="card-footer d-flex align-items-center justify-content-between">
                            <div class="small text-white">View Details</div>
                            <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                          </div>
                        </a>

                        <a class="nav-item nav-link dashboard-b5" id="nav-users-tab" data-toggle="tab" href="#admins-table" role="tab" aria-controls="nav-profile" aria-selected="false">
                          <div class="card-body ">Admins</div>
                          <div class="card-footer d-flex align-items-center justify-content-between">
                            <div class="small text-white">View Details</div>
                            <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                          </div>
                        </a>

                        <a class="nav-item nav-link dashboard-admin-b2" id="nav-projects-tab" data-toggle="tab" href="#medicine-table" role="tab" aria-controls="nav-home" aria-selected="false">
                          <div class="card-body">Medicine Inventory</div>
                          <div class="card-footer d-flex align-items-center justify-content-between">
                            <div class="small text-white">View Details</div>
                            <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                          </div>
                        </a>

                        <a class="nav-item nav-link dashboard-admin-b3" id="nav-companies-tab" data-toggle="tab" href="#categories-table" role="tab" aria-controls="nav-contact" aria-selected="false">
                          <div class="card-body">Categories</div>
                          <div class="card-footer d-flex align-items-center justify-content-between">
                            <div class="small text-white">View Details</div>
                            <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                          </div>
                        </a>
                        <div class="col-sm-2"></div>
                      </div>
                    </nav>
                  </div>
                </div>
                <div class="row">
                  <div class="col-sm-12 ">
                    <div class="tab-content py-3 px-3 px-sm-0" id="nav-tabContent">
                      <div class="tab-pane fade" id="users-table" role="tabpanel" aria-labelledby="nav-users-tab">
                        <%= render 'shared/user_table' %>
                      </div>
                      <div class="tab-pane fade" id="medicine-table" role="tabpanel" aria-labelledby="nav-projects-tab">
                        <%= render 'shared/medicine_table' %>
                      </div>
                      <div class="tab-pane fade" id="categories-table" role="tabpanel" aria-labelledby="nav-companies-tab">
                        <%= render 'shared/categories_table' %>
                      </div>
                      <div class="tab-pane fade" id="admins-table" role="tabpanel" aria-labelledby="nav-categories-tab">
                        <%= render 'shared/admin_table' %>
                      </div>

                    </div>
                  </div>
                </div>
              </div>
            </section>
          </div>
        </div>
      </div>
    </main>
  </div>
</div>